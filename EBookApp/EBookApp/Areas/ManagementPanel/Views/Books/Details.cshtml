@model EBook.Entities.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Detay</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            İsim
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Yazar Adı
        </dt>
        <dd class = "col-sm-10">
            @Model.AuthorName
        </dd>
        <dt class = "col-sm-2">
            Kategori
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Sayfa Sayısı
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberPage
        </dd>
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            <img decoding="async" src="@Model.İmageUrl" width="100px" asp-append-version="true" />
        </dd>
        <dt class = "col-sm-2">
            Yayın Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.PublishDate
        </dd>
        <dt class = "col-sm-2">
            Ürün Kodu
        </dt>
        <dd class = "col-sm-10">
            @Model.Isbn
        </dd>
        <dt class = "col-sm-2">
            Durum
        </dt>
        <dd class = "col-sm-10">
            @Model.Status
        </dd>
        <dt class = "col-sm-2">
            Ekleme Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedDate
        </dd>
    </dl>
</div>
