@model EBook.Entities.Models.Book

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Düzenle</h1>

@using (Html.BeginForm("Edit", "Books", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class="text-danger"})
        @Html.HiddenFor(model => model.Id)


        <label class="control-label col-md-2">Resim</label>
        @*İmage*@
        <div class="form-group">
            @*@Html.LabelFor(model => model.İmageUrl, htmlAttributes: new {@class = "control-label col-md-2"})@**@

            <div class="col-md-10">
                <input type="file" accept="image/*" name="img" id="img" />
            </div>
        </div>

        <br />

        <label class="control-label col-md-2">Kitap Adı</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Yazar Adı</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.AuthorName, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.AuthorName, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Kategori</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Description, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Sayfa Sayısı</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberPage, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.NumberPage, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Yayın Tarihi</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.PublishDate, new {htmlAttibutes = new {@class = "form-control", @type="datetime"}})
                @Html.ValidationMessageFor(model => model.PublishDate, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Ürün Kodu</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Isbn, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Isbn, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new {@class = "control-label col-md-2"})

            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, new SelectList(
            new[]{
            new{Value = "true", Text = "Aktif"},
            new{Value = "false", Text = "Pasif"}
            },
            "Value",
            "Text",
            Model.Status), new{@class = "form-control"})
            </div>
            @Html.ValidationMessageFor(model => model.Status, "",
        new {@class = "text-danger"})
        </div>

        <br />
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
}

