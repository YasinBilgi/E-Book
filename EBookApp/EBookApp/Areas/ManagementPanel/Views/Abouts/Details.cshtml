@model EBook.Entities.Models.About

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Detay</h1>

<div>
    <h4>About</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Başlık
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            <img decoding="async" src="@Model.İmageUrl" width="100px" asp-append-version="true" />
        </dd>
        <dt class = "col-sm-2">
            Alt Başlık
        </dt>
        <dd class = "col-sm-10">
            @Model.Subtitle
        </dd>
        <dt class = "col-sm-2">
            Açıklama
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Durum
        </dt>
        <dd class = "col-sm-10">
            @Model.Status
        </dd>
        <dt class = "col-sm-2">
            Ekleme Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedDate
        </dd>
    </dl>
</div>
