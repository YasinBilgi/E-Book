@model EBook.Entities.Models.Author

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Düzenle</h1>

@using (Html.BeginForm("Edit", "Books", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class="text-danger"})
        @Html.HiddenFor(model => model.Id)


        <label class="control-label col-md-2">Resim</label>
        @*İmage*@
        <div class="form-group">
            @*  @Html.LabelFor(model => model.İmageUrl, htmlAttributes: new {@class = "control-label col-md-2"})*@

            <div class="col-md-10">
                <input type="file" accept="image/*" name="img" id="img" />
            </div>
        </div>

        <br />

        <label class="control-label col-md-2">Adı</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.FirstName, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Soyadı</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.LastName, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Doğum Tarihi</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.BirthDate, new {htmlAttibutes = new {@class = "form-control", @type="datetime"}})
                @Html.ValidationMessageFor(model => model.BirthDate, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Ölüm Tarihi</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeathDate, new {htmlAttibutes = new {@class = "form-control", @type="datetime"}})
                @Html.ValidationMessageFor(model => model.DeathDate, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <label class="control-label col-md-2">Biyografi</label>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Biography, new {htmlAttibutes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Biography, "", new {@Classs = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new {@class = "control-label col-md-2"})

            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, new SelectList(
            new[]{
            new{Value = "true", Text = "Aktif"},
            new{Value = "false", Text = "Pasif"}
            },
            "Value",
            "Text",
            Model.Status), new{@class = "form-control"})
            </div>
            @Html.ValidationMessageFor(model => model.Status, "",
        new {@class = "text-danger"})
        </div>

        <br />
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
}

