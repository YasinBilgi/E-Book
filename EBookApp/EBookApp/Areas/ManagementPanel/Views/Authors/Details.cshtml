@model EBook.Entities.Models.Author

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h1>Detay</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Soyadı
        </dt>
        <dd class = "col-sm-10">
            @Model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Doğum Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            Ölüm Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.DeathDate)
        </dd>
        <dt class = "col-sm-2">
            Biyografi
        </dt>
        <dd class = "col-sm-10">
            @Model.Biography)
        </dd>
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            <img decoding="async" src="@Model.İmageUrl" width="100px" asp-append-version="true" />
        </dd>
        <dt class = "col-sm-2">
            Durum
        </dt>
        <dd class = "col-sm-10">
            @Model.Status)
        </dd>
        <dt class = "col-sm-2">
            Ekleme Tarihi
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedDate)
        </dd>
    </dl>
</div>
